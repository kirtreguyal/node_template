<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="/vendors/css/bootstrap.css">
    <script src="/vendors/js/jquery.js"></script>
    <script src="/customs/js/index.js"></script>
    <script src="/customs/js/cart.js"></script>
</head>
<body>
    <%- include("partials/header") %>

    <div class="container-fluid mt-4">
        <div class="row g-4"> 
            <!-- Products Section -->
            <div id="products-container" class="col-lg-7 m-3 border border-dark rounded p-3">
                <h4 class="text-center mb-4">Products</h4>
                <div class="row">
                    <% products.forEach(product => { %>
                        <form action="/products/add-to-cart" method="POST" class="add-to-cart-form col-6 col-sm-4 col-md-3">
                            <div class="card h-100 p-2" data-bs-toggle="modal" data-bs-target="#show-image-modal">
                                <img src="/images/<%= product.image_path %>" class="card-img-top img-fluid rounded" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                                <div class="card-body text-center">
                                    <h6 class="card-title text-truncate"><%= product.name %></h6>
                                    <p class="card-text text-muted small" style="height: 60px; overflow: hidden;"> <%= product.description %></p>
                                    <p class="card-text text-primary fw-bold">₱<%= product.price %></p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="input-group input-group-sm">
                                            <button type="button" class="decrease-qty-btn btn btn-outline-secondary">-</button>
                                            <input type="number" name="quantity" value="1" min="1" class="form-control text-center" style="max-width: 50px;">
                                            <button type="button" class="increase-qty-btn btn btn-outline-secondary">+</button>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-sm">Add</button>
                                    </div>
                                    <input type="hidden" name="product_id" value="<%= product.id %>">
                                </div>
                            </div>
                        </form>
                    <% }) %>
                </div>
            </div>

            <!-- Cart Section -->
            <div id="carts-container" class="col-lg-4 m-3 border border-dark rounded p-3">
                <h4 class="text-center mb-4">Cart</h4>
                <div class="card">
                    <div class="card-header cart-header bg-primary text-white">Shopping Cart</div>
                    <div class="card-body p-3">
                        <table class="table table-sm table-striped cart-table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Qty</th>
                                    <th>Action</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% let total_price = 0;
                                if(products_on_cart.length){
                                    products_on_cart.forEach(product => { 
                                        const sub_total = product.price * product.quantity;
                                        total_price += sub_total; %>
                                        <tr class="cart-product">
                                            <td class="name"><%= product.name %></td>
                                            <td class="price">₱<%= product.price %></td>
                                            <td>
                                                <form action="/carts/update" method="POST" class="update-cart-form d-inline">
                                                    <input type="hidden" name="product_id" value="<%= product.id %>">
                                                    <div class="input-group input-group-sm">
                                                        <button type="button" class="decrease-qty-btn btn btn-outline-secondary">-</button>
                                                        <input type="number" name="quantity" value="<%= product.quantity %>" min="1" class="form-control text-center" style="max-width: 50px;">
                                                        <button type="button" class="increase-qty-btn btn btn-outline-secondary">+</button>
                                                    </div>
                                                </form>
                                            </td>
                                            <td>
                                                <form action="/carts/remove-product" method="POST" class="remove-to-cart-form d-inline">
                                                    <input type="hidden" name="product_id" value="<%= product.id %>">
                                                    <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                                </form>
                                            </td>
                                            <td class="subtotal">₱<%= sub_total %></td>
                                        </tr>
                                    <% }) %>
                                    <tr>
                                        <td colspan="4" class="text-end fw-bold">Total:</td>
                                        <td>₱<%= total_price %></td>
                                    </tr>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center">Your cart is empty.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    <% if(products_on_cart.length){ %>
                        <div class="card-footer text-center">
                            <form class="checkout-form" action="/carts/checkout" method="POST">
                                <button type="submit" class="btn btn-success">Proceed to Checkout</button>
                            </form>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
