<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="/vendors/css/bootstrap.css">
    <script src="/vendors/js/jquery.js"></script>
    <script src="/vendors/js/bootstrap.bundle.min.js"></script>
    <script src="/customs/js/index.js"></script>
    <script src="/customs/js/cart.js"></script>
</head>
<body>
    <%- include("partials/header") %>

    <div class="modal fade" id="show-image-modal" tabindex="-1" aria-labelledby="modal-title" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body container">
                    <img class="w-100" id="modal-image" src="" alt="" style="height: 300px; object-fit: cover;">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>  

    <div class="container-fluid mt-4">
        <div class="d-flex justify-content-center row g-4"> 
            <!-- Products Section -->
            <div id="products-container" class="col-lg-7 m-3 p-3">
                <h4 class="text-center mb-4">Products</h4>
                <div class="row">
                    <% products.forEach(product => { %>
                        <form action="/products/add-to-cart" method="POST" class="add-to-cart-form col-6 col-sm-4 col-md-3 mb-3">
                            <div class="card h-100 p-2">
                                <img src="/images/<%= product.image_path %>" class="card-img-top img-fluid rounded" alt="<%= product.name %>" style="height: 200px; object-fit: cover;" data-bs-toggle="modal" data-bs-target="#show-image-modal">
                                <div class="card-body text-center">
                                    <h6 class="card-title text-truncate"><%= product.name %></h6>
                                    <p class="card-text text-muted small" style="height: 60px; overflow: hidden;"> <%= product.description %></p>
                                    <p class="card-text text-primary fw-bold">â‚±<%= product.price %></p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="input-group input-group-sm">
                                            <button type="button" class="decrease-qty-btn btn btn-outline-secondary">-</button>
                                            <input type="number" name="quantity" value="1" min="1" class="form-control text-center" style="max-width: 50px;">
                                            <button type="button" class="increase-qty-btn btn btn-outline-secondary">+</button>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-sm">Add</button>
                                    </div>
                                    <input type="hidden" name="product_id" value="<%= product.id %>">
                                </div>
                            </div>
                        </form>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
